class Solution {
public:
    double myPow(double x, int n) {
        long long nn = n;
        double ans = 1;
        bool negative = false;

        if (nn < 0) {
            negative = true;
            nn = -nn;
        }

        while (nn) {
            if (nn % 2 == 1) {
                ans = ans * x;
                nn = nn - 1;
            } else {
                x = x * x;
                nn = nn / 2;
            }
        }

        if (negative) {
            ans = 1.0 / ans;
        }

        return ans;
    }
};
